{
	"name": "Medievalist-Today",
	"version": "1.0.0",
	"description": "A home website for Daniel Kephart",
	"type": "module",
	"scripts": {
		"build": "npx @11ty/eleventy",
		"build-nocolor": "cross-env NODE_DISABLE_COLORS=1 npx @11ty/eleventy",
		"build-ghpages": "npx @11ty/eleventy --pathprefix=/medievalist-today/",
		"start": "npx @11ty/eleventy --serve --quiet",
		"start-ghpages": "npx @11ty/eleventy --pathprefix=/medievalist-today/ --serve --quiet",
		"debug": "cross-env DEBUG=Eleventy* npx @11ty/eleventy",
		"debugstart": "cross-env DEBUG=Eleventy* npx @11ty/eleventy --serve --quiet",
		"benchmark": "cross-env DEBUG=Eleventy:Benchmark* npx @11ty/eleventy"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/danielkephart/medievalist-today.git"
	},
	"author": {
		"name": "Daniel Kephart",
		"email": "dkephart@ur.rochester.edu",
		"url": "https://github.com/danielkephart"
	},
	"license": "MIT",
	"engines": {
		"node": ">=18"
	},
	
	"homepage": "https://github.com/danielkephart/medievalist-today#readme",
	"devDependencies": {
		"@11ty/eleventy": "^3.1.0",
		"@11ty/eleventy-img": "^6.0.4",
		"@11ty/eleventy-navigation": "^1.0.4",
		"@11ty/eleventy-plugin-rss": "^2.0.4",
		"@11ty/eleventy-plugin-syntaxhighlight": "^5.0.1",
		"cross-env": "^7.0.3",
		"luxon": "^3.6.1",
		"prismjs": "^1.30.0",
		"zod": "^3.24.4",
		"zod-validation-error": "^3.4.1"
	},
	"dependencies": {
		"@zachleat/heading-anchors": "^1.0.3"
	}
}
